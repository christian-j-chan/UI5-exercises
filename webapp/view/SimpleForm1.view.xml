<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.acn.ui5training.exercise1.2.controller.SimpleForm1">
    <Page id="page" title="{i18n>title}">
    <content>
        <sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" id="simple_form">
            <sap.ui.layout.form:content>
                <sap.ui.core:Title text="Title" id="title0"/>
                <Label text="Name" id="label0"/>
                <Input width="100%" id="input_name"/>
                <Label text="Street/No" id="label1"/>
                <Input width="100%" id="input_street"/>
                <Input xmlns="sap.m" id="input_house_no"/>
                <Label text="Zip Code / City" width="100%" id="label3"/>
                <Input xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" xmlns="sap.m" id="input_zip_code"/>
                <Input xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" width="100%" id="input_city"/>
                <Label text="Country" width="100%" id="label4"/>
                <ComboBox xmlns="sap.m" id="box_country">
                    <items>
                        <core:Item xmlns:core="sap.ui.core" key="item-gb" text="England" id="item_gb"/>
                        <core:Item xmlns:core="sap.ui.core" key="item-de" text="Germany" id="item_de"/>
                        <sap.ui.core:Item text="USA" id="item_us" key="item-us"/>
                        <sap.ui.core:Item text="Philippines" id="item_ph" key="item-ph"/>
                        </items>
                    
                </ComboBox></sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
        <Toolbar width="100%" id="toolbar1">
            <content>
                <ToolbarSpacer id="spacer0"/>
                <Button xmlns="sap.m" text="Save" id="button_save" type="Accept"/>
                <Button xmlns="sap.m" text="Clear" id="button_clear" type="Reject" press="clearAllFields"/>
            </content>
        </Toolbar>
    </content>
    </Page>
</mvc:View>